<!DOCTYPE html>
<html lang="en-US">

<head>
	{{>links}}
	<style>
		section {
			margun: 0;
			background-color: #EEEEEE;
			height: 800px;
		}

		.payment {
			padding: 15%;
			background-color: #FFFFFF;
			position: absolute;
			top: 250px;
			margin-left: 20%;
			width: 60%;
			height: 500px;
		}

		form input {
			width: 90%;
			margin: 20px;
			height: 100%;
			box-shadow: 0 5px 10px rgba(.2, 0, 0, .2);
			border: none;
		}

		.btn {
			padding: 0;
			height: 100%;
			background-color: blue;
			color: #FFFFFF;
			box-shadow: 0 5px 10px rgba(.2, 0, 0, .2);
			border: none;
		}

		@media only screen and (max-width: 600px) {
			body {
				font-size: 10px;
			}

			section {
				height: 500px;
			}

			.payment {
				padding: 10%;
				padding-top: 12%;
				position: absolute;
				top: 150px;
				margin-left: 5%;
				width: 90%;
				height: 300px;
			}

			.btn {
				padding: 0;
				margin-top: 0;
				font-size: 13px;
				height: 100%;
			}
		}
	</style>
	<script>
		document.onreadystatechange = function () {
			var state = document.readyState
			if (state == 'interactive') {
				document.getElementById('contents').style.visibility = "hidden";
			} else if (state == 'complete') {
				setTimeout(function () {
					document.getElementById('interactive');
					document.getElementById('load').style.visibility = "hidden";
					document.getElementById('contents').style.visibility = "visible";
				}, 1000);
			}
		}
	</script>
</head>

<body>
	{{>header}}
	<div id="load"></div>
	<div>
		<main>
			<section id="contents">
				<div class="payment">
					<form action="/final_pay_step" method="POST" enctype="multipart/form-data">
						<div class="">
							<label for="Bill Picture">Upload your bill picture : </label><br />
							<input type="file" class="t" name="Photo_online_bill">
						</div>
						<input type="submit" class="btn" value="Next">
					</form>
				</div>
			</section>
		</main>
		<!-- #main -->
	</div>
	<!-- footer goes here -->

	{{>footer}}
	{{>footer_js}}
</body>

</html>