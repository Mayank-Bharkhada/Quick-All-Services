@media only screen and (max-width: 600px) {
	body {
        font-size:10px;
	}

	section{
		height:500px;
	}
	
	.payment{
		position:absolute;
		top:8rem;
		margin-left:5%;
		width:90%;
		height:300px;
	}

	.btn{
                font-size:11px;
		height:100%;
        }
}

</style>
<script>
document.onreadystatechange = function () {
  var state = document.readyState
  if (state == 'interactive') {
       document.getElementById('contents').style.visibility="hidden";
  } else if (state == 'complete') {
      setTimeout(function(){
         document.getElementById('interactive');
         document.getElementById('load').style.visibility="hidden";
         document.getElementById('contents').style.visibility="visible";
      },1000);
  }
}
</script>
</head>
<body>
	{{>header}}
		<div id="load"></div>
		<div>
			<main>
				<section id="contents">
                                        <div class="payment">
					<form action="/block_id" method="POST">
                                        <label for="Number">Number :</label><br />
                                        <input type="text" class="" name="Number" value="+91">
                                        <input type="submit" class="btn" value="Block Now">
                                        </form>
                                        </div>
				</section>	
			</main>
			<!-- #main -->
		</div>
		<!-- footer goes here -->
	
	{{>footer}}
	{{>footer_js}}
</body>

</html>


