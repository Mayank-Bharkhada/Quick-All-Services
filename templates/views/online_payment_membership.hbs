<!DOCTYPE html>
<html lang="en-US">
<head>
	{{>links}}
<style>
	

	section{
		margun:0;
		background-color: #EEEEEE;
		height:800px;
	}
	
	.payment{
		padding:15%;
		background-color: #FFFFFF;
		position:absolute;
		top:10rem;
		margin-left:20%;
		width:60%;
		height:500px;
	}
	
	form input{
                width:90%;
                margin:20px;
                height:25px;
		padding:5px;
		border-radius:5px;
                box-shadow:0 5px 10px rgba(.2,0,0,.2);
                border:none;
        }

	div.flex-box{
                background-color: #000000;
                display:flex;
        }

	.btn{
		padding:0;
		height:100%;
		background-color: blue;
		color: #FFFFFF;
		box-shadow:0 5px 10px rgba(.2,0,0,.2);
                border:none;
	}
	
	div.flex-btn{
                padding:5px;
                margin:5%;
        }

@media only screen and (max-width: 600px) {
	body {
        font-size:10px;
	}

	section{
		height:500px;
	}
	
	.payment{
		padding:10%;
		position:absolute;
		top:8rem;
		margin-left:5%;
		width:90%;
		height:auto;
	}

	.btn{
		padding:0;
		margin-top:0;
                font-size:13px;
		height:100%;
        }

	div.flex-btn a{
                font-size:10px;
                margin:5px;
        }

}

</style>
<script>
document.onreadystatechange = function () {
  var state = document.readyState
  if (state == 'interactive') {
       document.getElementById('contents').style.visibility="hidden";
  } else if (state == 'complete') {
      setTimeout(function(){
         document.getElementById('interactive');
         document.getElementById('load').style.visibility="hidden";
         document.getElementById('contents').style.visibility="visible";
      },1000);
  }
}
</script>
</head>
<body>
	{{>header}}
		<div id="load"></div>
		<div>
			<main>
				<section id="contents">
                                        <div class="payment">
                                        <form action="/pay_your_membership_payment" method="POST" >
                                        <lable for="Payment code">Number : </lable><br />
                                        <input type="text"  name="Mobile_number" maxlength="13" pattern="(\+91)?(-)?\s*?(91)?\s*?(\d{3})-?\s*?(\d{3})-?\s*?(\d{4})"  id="number" value="+91"> 
					<div style="display:{{NONE}}"><p style="color:red">Your payment is not expired yet please try again later....</p></div>
					<input type="submit" class="btn" id="button"  value="Next">
                                        </form>
                                        </div>
				</section>	
			</main>
			<!-- #main -->
		</div>
		<!-- footer goes here -->
	{{>number_validation}}
	{{>footer}}
	{{>footer_js}}
</body>

</html>


